@model UET_CSE.Models.AddAdmin

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("DeleteAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="event-form" style="background-color:aliceblue">
        <div class="container" style="background-color:aliceblue">
            <br><br><h2>@ViewBag.Title</h2><br><br>
            <form class="form-horizontal" action="/action_page.php">
                @Html.AntiForgeryToken()
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name )
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name )
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Type )
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email )
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email )
                    </dd>

                    
                </dl>

                <input type="submit" value="Delete" class="btn btn-default" , onclick="return confirm ('Are you sure want to delete this course?');" />
            </form>
        </div>
        <br />
        <br />
    </section>
}
