@model UET_CSE.Models.Cours

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("DeleteCourse", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="event-form" style="background-color:aliceblue">
        <div class="container" style="background-color:aliceblue">
            <br><br><h2>@ViewBag.Title</h2><br><br>
            <form class="form-horizontal" action="/action_page.php">
                @Html.AntiForgeryToken()
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SubjectCode)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SubjectCode)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SubjectName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SubjectName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SubjectAbbreviation)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SubjectAbbreviation)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CreditHours)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreditHours)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SemesterNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SemesterNumber)
                    </dd>

                </dl>

                <input type="submit" value="Delete" class="btn btn-default" , onclick="return confirm ('Are you sure want to delete this course?');" />
            </form>
        </div>
    </section>
}
