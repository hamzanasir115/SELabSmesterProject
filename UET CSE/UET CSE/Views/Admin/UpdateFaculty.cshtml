@model UET_CSE.Models.AddFaculty

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateFaculty", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    <section class="event-form" style="background-color:aliceblue">
        <div class="container" style="background-color:aliceblue">
            <br><br><h2>@ViewBag.Title</h2><br><br>
            <form class="form-horizontal" action="/action_page.php">
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.ImagePath)

                <div class="form-group">
                    @Html.LabelFor(model => model.Designation, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Designation, new List<SelectListItem>
                            { new SelectListItem{Text="Dean", Value="Dean"},
                              new SelectListItem{Text="Chair Person", Value="Chair Person" },
                               new SelectListItem{Text="Professor", Value="Professor"},
                                new SelectListItem{Text="Assistant Professor", Value="Assistant Professor"},
                                new SelectListItem{Text="Lecturer", Value="Lecturer"}}, new { style = "width:545px" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Qualification, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Qualification, new List<SelectListItem>
                            { new SelectListItem{Text="Msc. Computer Science", Value="Msc. Computer Science"},
                              new SelectListItem{Text="Msc. Computer Engineering", Value="Msc. Engineering" },
                               new SelectListItem{Text="Phd Computer Engineering", Value="Phd Engineering"},
                                new SelectListItem{Text="Phd Computer Engineering", Value="Phd Engineering"} }, new { style = "width:545px" })
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Other_Qualification, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Other_Qualification, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Other_Qualification, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div><br><br><br>
    </section>
}

