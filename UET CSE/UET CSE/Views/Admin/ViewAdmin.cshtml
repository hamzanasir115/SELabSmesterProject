@model IEnumerable<UET_CSE.Models.AddAdmin>

@{
    
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("ViewAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="event-form" style="background-color:aliceblue">
        <div class="container" style="background-color:aliceblue">
            <br><br><h2>@ViewBag.Title</h2><br><br>
            <form class="form-horizontal" action="/action_page.php">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email )
                        </th>
                        
                        
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email )
                            </td>
                            
                            <td>
                                @Html.ActionLink("Update", "UpdateAdmin", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "DeleteAdmin", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </form>
        </div><br /><br /><br />
    </section>
}
